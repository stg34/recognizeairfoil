<!DOCTYPE html>
<html>
<head>
  <title>Recognize airfoil</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-inverse navbar-fixed-top">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/">Recognize airfoil</a>
    </div>
    <div id="navbar" class="navbar-collapse collapse">
      <ul class="nav navbar-nav navbar-right">
        <li><a href="/airfoils">Airfoil database</a></li>
      </ul>
    </div>
  </div>
</nav>

<div class="container-fluid">
  <div class="row">

    <div class="col-sm-3 col-md-2 sidebar">

      <%= form_tag('/') do |f| %>
        <div class="form-group">
          <label for="exampleInputEmail1">Airfoil coordinates</label>
          <%= text_area_tag('coordinates', content = @coordinates, style: 'height: 300px; font-family: monospace; font-size: 10px', class: "form-control", placeholder: "Airfoil coordinates") %>
        </div>
        <button type="submit" class="btn btn-default">Search</button>
        <a href="#" id="clear-link" class="pull-right">Clear</a>
      <% end %>

    </div>

    <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
      <%= yield %>
    </div>
  </div>
</div>


<script>
  $(document).ready(function() {
    //lines = '99.7   0.7\n97.0   0.7\n91.6   0.7\n86.3   0.8\n80.9   1.2\n76.8   1.6\n72.8   2.2\n64.7   3.8\n51.2   6.2\n40.4   7.5\n27.0   8.6\n18.9   8.6\n13.5   7.5\n8.1   6.2\n2.7   3.5\n1.3   1.9\n0.0   0.0\n0.0   0.0\n1.3  -2.2\n2.7  -2.7\n8.1  -3.0\n13.5  -3.2\n18.9  -3.5\n27.0  -3.5\n40.4  -3.8\n51.2  -4.0\n64.7  -4.4\n72.8  -4.4\n76.8  -4.3\n80.9  -4.0\n86.3  -3.5\n91.6  -2.2\n97.0  -0.9\n99.7  -0.5\n'
    $("#clear-link").click(function() {
      $('#coordinates').val('');
    });
  });

</script>

</body>
</html>



